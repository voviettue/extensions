{
  "name": "terminal-extensions",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "npm run build --workspaces && node ./scripts/build.js",
    "pack": "node ./scripts/pack.js",
    "lint:eslint": "eslint .",
    "format": "prettier --write \"**/*.{js,ts,vue,md,yaml}\"",
    "prepare": "husky install"
  },
  "author": "",
  "license": "ISC",
  "workspaces": [
    "packages/displays/*",
    "packages/endpoints/*",
    "packages/hooks/*",
    "packages/interfaces/*",
    "packages/modules/*",
    "packages/panels/*",
    "packages/layouts/*"
  ],
  "dependencies": {
    "glob": "^7.2.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.27.0",
    "eslint": "^8.16.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-vue": "^9.1.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.0",
    "prettier": "^2.6.2"
  },
  "lint-staged": {
    "*.{js,ts,vue}": "eslint --fix",
    "*.{md,yaml}": "prettier --write"
  }
}
